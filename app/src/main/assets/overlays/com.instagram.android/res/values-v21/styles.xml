<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme" parent="@*android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="android:colorAccent">#ff1976d2</item>
        <item name="android:colorEdgeEffect">#80ffffff</item>
    </style>


    <style name="Base.Theme.Instagram" parent="@*com.instagram.android:style/Base.Theme">
        <item name="android:colorBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:buttonStyle">@*com.instagram.android:style/ButtonStyle</item>
        <item name="android:windowBackground">@*android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:autoCompleteTextViewStyle">@*com.instagram.android:style/IgAutoCompleteTextView</item>
        <item name="android:checkboxStyle">@*com.instagram.android:style/IgTextboxStyle</item>
        <item name="android:editTextStyle">@*com.instagram.android:style/EditTextStyle</item>
        <item name="android:tabWidgetStyle">@*android:style/Widget.TabWidget</item>
        <item name="android:textViewStyle">@*com.instagram.android:style/TextViewStyle</item>
        <item name="android:textColorLink">#ff1976d2</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:dialogTheme">@*com.instagram.android:style/IgDialog</item>
        <item name="android:statusBarColor">@*android:color/primary_dark_material_dark</item>
        <item name="*com.instagram.android:glyphColorPrimary">@*android:color/white</item>
        <item name="*com.instagram.android:glyphColorSecondary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:glyphColorSecondaryActive">@*android:color/dim_foreground_light</item>
        <item name="*com.instagram.android:textColorPrimary">@*android:color/white</item>
        <item name="*com.instagram.android:textColorSecondary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:textColorTertiary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:textColorSelected">@*android:color/white</item>
        <item name="*com.instagram.android:textColorBoldLink">@*android:color/white</item>
        <item name="*com.instagram.android:textColorRegularLink">@*android:color/accent_material_dark</item>
        <item name="*com.instagram.android:textColorHyperlink">@*android:color/accent_material_dark</item>
        <item name="*com.instagram.android:dividerColor">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:backgroundColorPrimary">@*android:color/primary_material_dark</item>
        <item name="*com.instagram.android:backgroundColorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*com.instagram.android:backgroundColorSecondary">@*android:color/background_floating_material_dark</item>
        <item name="*com.instagram.android:backgroundColorHighlight">@*android:color/dim_foreground_light</item>
        <item name="*com.instagram.android:backgroundColorHighlightPressed">@*android:color/dim_foreground_light</item>
        <item name="*com.instagram.android:backgroundDrawable">@*com.instagram.android:drawable/bg_simple_row</item>
        <item name="*com.instagram.android:backgroundNotificationBadge">@*com.instagram.android:drawable/notification_bubble_whiteout</item>
        <item name="*com.instagram.android:defaultSpinnerStyle">@*com.instagram.android:style/SpinnerTextStyle.Whiteout</item>
        <item name="*com.instagram.android:segmentedUnderlineWidth">@*com.instagram.android:dimen/segmented_underline_width_whiteout</item>
        <item name="*com.instagram.android:igSwitchStyle">@*com.instagram.android:style/IgSwitchStyle</item>
        <item name="*com.instagram.android:igBadgeViewStyle">@*com.instagram.android:style/IgBadgeViewStyle</item>
    </style>
    <style name="ImmersiveViewerOverlay">
        <item name="android:colorControlNormal">#b3ffffff</item>
        <item name="*com.instagram.android:glyphColorSecondary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:glyphColorSecondaryActive">@*android:color/dim_foreground_light</item>
        <item name="*com.instagram.android:textColorPrimary">@*android:color/white</item>
        <item name="*com.instagram.android:textColorSecondary">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:textColorBoldLink">@*android:color/white</item>
        <item name="*com.instagram.android:textColorRegularLink">@*android:color/white</item>
        <item name="*com.instagram.android:textColorHyperlink">@*android:color/secondary_text_default_material_dark</item>
        <item name="*com.instagram.android:backgroundColorSecondary">@*android:color/transparent</item>
        <item name="*com.instagram.android:backgroundDrawable">@null</item>
        <item name="*com.instagram.android:textColorLocation">@*android:color/white</item>
        <item name="*com.instagram.android:boldAllLinks">true</item>
        <item name="*com.instagram.android:shouldHideAllComments">true</item>
    </style>
</resources>
